<h1>FOLLOWERS</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to user_path(user) do %>
          <%= user.name %>
          <% end %>
      </td>
      <td>
        <% if user !=current_user %>
         <% if user.followed_by?(current_user) %>
          <%= link_to user_followingrelationships_path(user),method: :delete do %>
            <button>フォロー解除</button>
            <% end %>
          <% else %>
          <%=link_to user_followingrelationships_path(user),method: :post do %>
            <button>フォロー</button>
            <% end %>
            <% end %>
          <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>