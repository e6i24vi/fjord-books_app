<h1> <%= t("posts.index") %></h1>

<table>
  <thead>
  <tr>
    <th>
      <%= Post.human_attribute_name(:title) %>
    </th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post|  %>
  <tr>
    <td><%= post.title %></td>
    <td><%= link_to t('views.common.show'), post %></td>
    <% if current_user.id == post.user.id %>
    <td><%= link_to t('views.common.edit'), edit_post_path(post) %></td>
    <td><%= link_to t('views.common.destroy') ,post ,method: :delete, data: { confirm: t('views.common.delete_confirm') }  %></td>
    <% end %>
  </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @posts %>

<br>
<%= link_to t("views.common.new"), new_post_path %>